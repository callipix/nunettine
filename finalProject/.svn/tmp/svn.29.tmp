        <div id="chatMessages">
        <!-- 여기에 채팅 메시지가 추가될 것입니다 -->
    </div>
    <script>
        // JavaScript 코드 시작
        var myRoom = ${myList};
        var roomMessageJson = ${roomMessageJson};

        // 채팅 메시지를 출력하는 함수
        function displayChatMessages() {
            var chatMessagesDiv = document.getElementById("chatMessages");

            for (let i = 0; i < roomMessageJson.length; i++) {
                var msgData = {
                    msgSendDate: roomMessageJson[i]["msgSendDate"],
                    msgCont: roomMessageJson[i]["msgCont"],
                    userId: roomMessageJson[i]["userId"],
                };
                
                var newChatMessageDiv = document.createElement("div");

                if (msgData.userId === myRoom.userId) {
                	newChatMessageDiv.innerHTML = "<p style='color: blue;'>[나] 전송일자:"+ msgData.msgSendDate +" 메세지:"+ msgData.msgCont + " : " + msgData.userId +"</p>";
                } else {
                	newChatMessageDiv.innerHTML = "<p style='color: black;'>전송일자:"+ msgData.msgSendDate +" 메세지:"+ msgData.msgCont +" 보낸사람:"+ msgData.userId+"</p>";
                }

                chatMessagesDiv.appendChild(newChatMessageDiv);
            }
        }
        // 페이지 로드 시 채팅 메시지 출력
        displayChatMessages();
        // JavaScript 코드 끝
    </script>
