	$("#firstCode").on("change",function(){
		$("#thirdCode").html("<select><option>소분류를 선택하세요.</option></select>");
       	$("#codeName").val("");
		$("#spcltyRealmCode").val("");
		var firstCode = $("#firstCode").val();
		var firstCodeNm = $("#firstCode > option:selected").attr("value2");
