    채팅내역 불러오기 끝
    <!--  -->
    <!--  -->
    
<div class="container">
    <div class="col-6">
<%--         <h4>${myList}</h4> --%>
    </div>
    <div>
        <div id="msgArea" class="col"></div>
        <div class="col-6">
            <div class="input-group mb-3">
                <input type="text" id="msg" class="form-control">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit" id="button-send">전송</button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6"></div>
</div>
    
<%-- 				var username = ${#authentication.principal.username}; --%>
</body>
<script type="text/javascript">
$(document).ready(function(){
	
	var myRoom = ${myList};
	console.log("myRoom " , myRoom);
	console.log("roomNo : " + myRoom.roomNo);
	
	var roomNo = myRoom["roomNo"];
	console.log("roomNo : " + roomNo);
	
	var userId = myRoom["userId"];
	console.log("userId : " , userId);

	var sockJs = new SockJS("/stomp/chat");
 	var stomp = Stomp.over(sockJs);
	
 	stomp.connect({}, function() {
	console.log("STOMP Connection");
	
	stomp.subscribe("/sub/chat/room/" + roomNo, function(chat) {
		
	    var content = JSON.parse(chat.body);
	    var roomNo  = content.roomNo;
	    var message = content.msgCont;
	    var writer = content.userId;
	    var date = content.msgSendDate;
	    
	    var str = '';
	    
		console.log("content : " , content);
	    if (writer === userId) {
	        str += "<div class='col-6'>";
	        str += "<div class='alert alert-secondary'>";
	        str += "<b>" + writer + " : " + message + "</b>";
	        str += "</div></div>";
	    } else {
	    	console.log("유저아이디와 다를때" , userId);
	        str += "<div class='col-6'>";
	        str += "<div class='alert alert-warning'>";
	        str += "<b>" + writer + " : " + message + "</b>";
	        str += "</div></div>";
	    }
	
	    $("#msgArea").append(str);
	});
	
	console.log("테스트" , roomNo)
	  stomp.send('/pub/chat/enter', {},
			  JSON.stringify({ roomNo: roomNo, userId:userId})
			  );
	});
	$("#msg").keydown(function(key) {
	  var msg = document.getElementById("msg");
	  var date = new Date();
	
	  if (key.keyCode == 13) {
	      stomp.send('/pub/chat/message', {},
	          JSON.stringify({ roomNo: roomNo, msgCont: msg.value, userId:userId , msgSendDate: date , msgCheck:"T" })
	      );
	      console.log('Enter');
	      msg.value = '';
	  }
	
	});
});
</script>

</html>