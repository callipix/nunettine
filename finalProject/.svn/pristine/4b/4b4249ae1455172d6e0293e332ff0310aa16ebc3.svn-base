<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.chatting.mapper.MessageMapper">

	<insert id="insert" parameterType="kr.or.ddit.chatting.vo.MessageVO">
		INSERT INTO MESSAGE(MSG_NO, MSG_SEND_DATE, MSG_CONT, MSG_CHECK, ROOM_NO, USER_ID)
		VALUES(MSG_NO_SEQ.NEXTVAL , SYSDATE , #{msgCont} , #{msgCheck} , #{roomNo} , #{userId})
	</insert>
	
	<select id="messageList" parameterType="int" resultType="kr.or.ddit.chatting.vo.MessageVO">
		SELECT MSG_NO, MSG_SEND_DATE, MSG_CONT, MSG_CHECK, ROOM_NO, USER_ID
		  FROM MESSAGE
	     WHERE ROOM_NO = #{roomNo}
	     ORDER BY MSG_NO DESC
	</select>

</mapper>