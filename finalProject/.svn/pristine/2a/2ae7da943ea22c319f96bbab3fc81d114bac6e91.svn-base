			<style>
				.tyn-quick-chat-box {
					display: flex;
					flex-direction: column;
				}

				.alert {
					width: 250px;
					/* 원하는 가로 길이로 조절 */
				}

				.tyn-quick-chat-form {
					position: fixed;
					bottom: 0;
					left: 0;
					width: 100%;
					background-color: #ffffff;
					/* 원하는 배경색으로 변경 가능 */
					padding: 10px;
					/* 필요에 따라 여백 조정 */
					border-top: 1px solid #dddddd;
					/* 원하는 테두리 설정 가능 */
				}
			</style>
			<script>
				document.addEventListener("DOMContentLoaded", function () {
					// 페이지 로드 후 필요한 동작 실행
					loadRoomList();
					

					// 요소가 로드된 후에 실행될 함수 정의
					scrollToBottom();
				});
				function scrollToBottom() {
					var scrollingElement = document.getElementById('scrolling'); // 스크롤링이 적용된 요소
					    scrollingElement.scrollTop = scrollingElement.scrollHeight; // 요소의 스크롤 위치를 맨 아래로 이동
				}
				function getTime() {
					let day = new Date();

					let year       = day.getFullYear();
					let month      = ('0' + (day.getMonth() + 1)).slice(-2);
					let date       = ('0' + day.getDate()).slice(-2);

					let hour       = ('0' + day.getHours()).slice(-2);
					let minutes    = ('0' + day.getMinutes()).slice(-2);
					let secounds   = ('0' + day.getSeconds()).slice(-2);

					let timeTT     = year + ":" + month + ":" + date;
					let timeString = year + month + date + hour + minutes + secounds;

					return timeString;
				}
				function getDay() {

					let day = new Date();

					let year     = day.getFullYear();
					let month    = ('0' + (day.getMonth() + 1)).slice(-2);
					let date     = ('0' + day.getDate()).slice(-2);

					let hour     = ('0' + day.getHours()).slice(-2);
					let minutes  = ('0' + day.getMinutes()).slice(-2);
					let secounds = ('0' + day.getSeconds()).slice(-2);

					let timeTT   = year + ":" + month + ":" + date;

					return timeTT.trim();
				}
				function loadRoomList() {
					// 내방 목록 출력
					console.log("룸테스트");
					$.ajax({
						url: "/todayMeeting/myList",
						type: "post",
						dataType: "json",
						success: function (result) {
							var roomList = result;
							var str = '';
							$.each(roomList, function (index, TdmtngVO) {
								str += '<div class="tyn-media-group">';
								str += '<div class="tyn-media tyn-size-lg">';
								str += '</div>';
								str += '<div class="tyn-media-col">';
								str += '<h6 class="name"><a href="#" onclick="myRoom(event, \'' + TdmtngVO.tdmtngNo + '\')" class="roomLink" data-tdmtngNo="' + TdmtngVO.tdmtngNo + '">' + "모임명 : " + TdmtngVO.tdmtngNm + '</a></h6>';
								str += '<p class="content">@' + TdmtngVO.userId + '</p>';
								str += '</div>';
								str += '</div>';
							});
							$('#myList').html(str);
						},
						error: function (xhr, status, error) {
							console.error('Error fetching room list:', status, error);
						}
					});
				}
				
				function myRoom(event, tdmtngNo) {
					
					event.preventDefault();

					$("#myList").hide();

					$.ajax({
						url: "/todayMeeting/join?tdmtngNo=" + tdmtngNo,
						type: "post",
						dataType: "json",
						success: function (result) {
							str = '';
							console.log("result.userId : " , result.userId);
// 							console.log("result.userId : ", result[0]["userId"]);
							chat(tdmtngNo, result.userId);
						}
					})
					function messageCheck(tdmtngNo) {

						$.ajax({
							url: "/todayMeeting/msgList",
							type: "POST",
							data: { tdmtngNo: tdmtngNo },
							dataType: "json",
							contentType: "application/x-www-form-urlencoded",
							success: function (result) {

								let isMonth = false; // 이전 날짜 출력 여부
								let previousDate = null;

								console.log("result : ", result);

								let joinRoom = result["joinRoom"];
								let msgList = result["msgList"];

								console.log("joinRoom : ", joinRoom);
// 								console.log("joinRoom userId : ", joinRoom[0]["userId"]);
								console.log("msgLost : ", msgList);

								// 채팅 메시지를 출력하는 함수
								function displayChatMessages() {
									for (let i = 0; i < msgList.length; i++) { // msgList 배열의 길이로 수정
										let msgData = {
											msgNo: msgList[i]["tdmtngChSpMsgNo"],
											msgSendDate: msgList[i]["tdmtngChSpMsgTrnsmisDt"],
											msgCont: msgList[i]["tdmtngChSpMsgCn"],
											userId: msgList[i]["userId"],
											roomNo: msgList[i]["tdmtngNo"]
										};

										let str = '';
// 										let currentDate = msgData.msgSendDate.substring(0, 10).trim();		
										let date     = msgData.msgSendDate.substring(0, 4).trim() + "-";
										    date	+= msgData.msgSendDate.substring(5, 7).trim() + "-";
										    date	+= msgData.msgSendDate.substring(8, 10).trim();

										let dayWeek = (new Date(date)).getDay();
										var weekdays = ['일', '월', '화', '수', '목', '금', '토'];
										let dayWeekString = weekdays[dayWeek];

										let currentDate = msgData.msgSendDate.substring(0, 4).trim() + "년 ";
										    currentDate	+= msgData.msgSendDate.substring(5, 7).trim() + "월 ";
										    currentDate	+= msgData.msgSendDate.substring(8, 10).trim() + "일 ";
										    currentDate	+= dayWeekString + "요일";

										if (currentDate != previousDate) {
											str += "<div class='col-12 text-center'>"+ currentDate +"</div><br>";
											previousDate = currentDate;
										}

										if (msgData.userId === joinRoom.userId) {
											// 내가 보낸 내역
											str += "<div class='col-6 text-right chat-message'>";
											str += "<div class='alert alert-secondary style=width:100px;'>";
											str += "<b>roomNo : " + msgData.roomNo + "<br>";
											str += "msgNo : " + msgData.msgNo + "<br>";
											str += "sendDate : " + msgData.msgSendDate.substring(10, 16) + "<br>";
											str += "메세지내용 : " + msgData.msgCont;
											str += "</div></div>"
										} else {
											str += "<div class='col-6 text-left chat-message'>";
											str += "<div class='alert alert-warning style=width:100px;'>";
											str += "<b>roomNo : " + msgData.roomNo + "<br>";
											str += "msgNo : " + msgData.msgNo + "<br>";
											str += "sendDate : " + msgData.msgSendDate.substring(10, 16) + "<br>";
											str += "Id : " + msgData.userId + "<br>";
											str += "메세지내용 : " + msgData.msgCont;
											str += "</div></div>";
										}
										$("#msgArea").append(str);
									}
								}
								// 페이지 로드 시 채팅 메시지 출력
								displayChatMessages(result);
							}
						});
					};
					
					function chat(tdmtngNo, userId) {

						var sockJs = new SockJS("/stomp/chat");
						var stomp = Stomp.over(sockJs);

						stomp.connect({}, function () {

							console.log("STOMP Connection");

							messageCheck(tdmtngNo);

							stomp.subscribe("/sub/chat/room/" + tdmtngNo, function (chat) {

								var content = JSON.parse(chat.body);
								var msgNo = content.tdmtngChSpMsgNo;
								var roomNo = content.tdmtngNo;
								var message = content.tdmtngChSpMsgCn;
								var writer = content.userId;
								var date = content.tdmtngChSpMsgTrnsmisDt;

								let str = '';

								console.log("content : ", content);

								if (writer === userId) {
									str += "<div class='col-12'>";
									str += "<div class='alert alert-secondary'>";
									str += "<br> 방번호 : " + roomNo + "</b>";
									str += "<br> 보낸시간 : " + date + "</b>";
									str += "<br> 작성자 : " + writer + "</b>";
									str += "<br> 메세지내용 :" + message + "</b>";
									str += "</div></div>";
								} else {
									console.log("유저아이디와 다를때", userId);
									str += "<div class='col-12'>";
									str += "<div class='alert alert-warning'>";
									str += "<br> 방번호 : " + roomNo + "</b>";
									str += "<br> 보낸시간 : " + date + "</b>";
									str += "<br> 작성자 : " + userId + "</b>";
									str += "<br> 메세지내용 :" + message + "</b>";
									str += "</div></div>";
								}
								$("#msgArea").append(str);
								// 		    $("#msgArea").append(str);
							});
							stomp.send('/pub/chat/enter', {},
								JSON.stringify({ tdmtngNo: tdmtngNo, userId: userId })
							);
							
							$("#tynQuickChatInput").keydown(function (key) {
								var msg = document.getElementById("tynQuickChatInput");
								var date = getTime();

								console.log("date : " + date);

								msg = $('#tynQuickChatInput').text().trim();

								if (key.keyCode == 13) {

									stomp.send('/pub/chat/message', {},
										JSON.stringify({ tdmtngNo: tdmtngNo, tdmtngChSpMsgCn: msg, tdmtngChSpMsgTrnsmisDt: date, userId: userId })
									);
									console.log('Enter');
									console.log("여기서 가는거 맞나 ? : ")
									$('#tynQuickChatInput').text("");
									$("#msgArea").scrollTop($("#msgArea")[0].scrollHeight);
								}
							});
						});
					}
				}
			</script>
