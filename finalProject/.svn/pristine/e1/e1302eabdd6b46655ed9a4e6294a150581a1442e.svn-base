	//시군구 선택시 아래 text에 입력
	$("#brtcCode").on("change",function(){
		var brtcCode = $("#brtcCode").val();
		var brtcNm = $("#brtcCode > option:selected").attr("value2");
		$("#brtcNm").val(brtcNm);
	})
	
