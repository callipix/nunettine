		oneInqryVO.setOneInqryCn((String)oneInqryInfoMap.get("oneInqryCn"));
		oneInqryVO.setUserId(userId);
		
		int res = 0;
		
		res = this.oneInqryService.oneInqryCreatePost(oneInqryVO, uploadFiles);
		
		return "redirect:/oneInqry/oneInqryList";
	}
	
