<script>
document.addEventListener('DOMContentLoaded', function() {
    // 페이지 1 버튼 클릭 시
    document.getElementById('page1Btn').addEventListener('click', function() {
        loadPage("http://localhost:8080/chat/sidebar1", 'content');
    });
    
    // 페이지 2 버튼 클릭 시
    document.getElementById('page2Btn').addEventListener('click', function() {
        loadPage("htpp://localhost:8080/chat/sidebar2", 'content');
    });
    
    // Ajax를 통해 페이지 로드하는 함수
    function loadPage(url, targetId) {
        var xhr = new XMLHttpRequest();
        console.log("url : " , url)
        xhr.open('GET', url, true);
        xhr.onreadystatechange = function() {
            if (xhr.readyState === 4 && xhr.status === 200) {
                document.getElementById(targetId).innerHTML = xhr.responseText;
            }
        };
        xhr.send();
    }
});
</script>
