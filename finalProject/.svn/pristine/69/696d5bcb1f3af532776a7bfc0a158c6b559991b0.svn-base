<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core" %>
<script src="//t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>
<link rel="stylesheet" href="/resources/css/sweetalert2.min.css">
<script src="/resources/js/sweetalert2.min.js"></script>
<script type="text/javascript" src="/resources/js/jquery.min.js"></script>
<style>
#donggyun{
	width:300px;
}
.form-control{
	width:200px;
}
.box_container{
/* 	height:100vh; */
	height:400px;
	display:flex;
	justify-content: center;
	
}
.box{
	text-align: center;
}
table{
	text-align: center;
}
#imgProfile{
	width:300px;
	height:300px;
	margin-left: auto;
	margin-bottom:20px;
	border-radius: 150px;
}
.filebox .upload-name {
    display: inline-block;
    height: 40px;
    padding: 0 10px;
    vertical-align: middle;
    border: 1px solid #dddddd;
    width: 78%;
    color: #999999;
}
.filebox #lab {
    display: inline-block;
    padding: 10px 20px;
    color: #fff;
    vertical-align: middle;
    background-color: #4B49AC;
    border-radius:13px 13px 13px 13px;
    cursor: pointer;
    height: 40px;
    margin-left: 10px;
}
.filebox input[type="file"] {
    position: absolute;
    width: 0;
    height: 0;
    padding: 0;
    overflow: hidden;
    border: 0;
}
</style>
<script>

$(document).ready(function(){
	if($("#sessionId").val() == ""){
		alert("로그인 후 이용해주세요.");
		location.href="/main";
	}
	const urlParams = new URL(location.href).searchParams;
	const name = urlParams.get("updPass");
	console.log("name : ",name);
	
	//정보수정 확인 비밀번호 일치 폼 변경
	if(name == "success"){
		var str = "<table class='table table-hover'>";
		str += "<tbody><tr><th>아이디</td><td>${memSession.userId}</td><td></td></tr>";
		str += "<tr><th>닉네임</td><td><input class='form-control' type='text' id='bfUserNcnm' name='bfUserNcnm' value='${memSession.userNcnm}'></td>";
		str += "<td><button type='button' class='btn btn-inverse-primary btn-fw' id='nickDupCk'>중복확인</button></td></tr>";
		str += "<tr><th>비밀번호</th><td colspan='2'><input class='form-control' type='password' id='bfUserPassword' name='bfUserPassword'></td></tr>";
		str += "<tr><th>비밀번호 확인</th><td colspan='2'><input class='form-control' type='password' id='bfUserPasswordCk'></td></tr>";
		str += "<tr><th>이메일</th><td>${memSession.email}</td><td></td></tr>";
		str += "<tr><th>이름</th><td>${memSession.userNm}</td><td></td></tr>";
		str += "<tr><th>전화번호</th><td><input type='text' class='form-control' id='bfMberMbtlnum' name='bfMberMbtlnum' value='${memSession.mberMbtlnum}'></td>";
		str += "<td><button type='button' class='btn btn-inverse-primary btn-fw' id='telCk'>본인인증</button></td></tr>";
		str += "<tr><th>성별</th><td>${memSession.sexdstnTy}</td><td></td></tr>";
		str += "<tr><th>우편번호</th><td>${memSession.zip}</td><td></td></tr>";
		str += "<tr><th>주소</th><td>${memSession.adres}</td><td>${memSession.detailAdres}</td></tr></tbody></table>";

		
		var btnStr = "<button type='button' class='btn btn-light btn-rounded btn-fw' id='updating'>수정</button>";
		btnStr += "<button type='button' class='btn btn-light btn-rounded btn-fw' id='updateCancel'>취소</button>";
		
		var photoBtn = "<div class='form-group filebox'><div class='input-group col-xs-12'>";
		photoBtn += "<input placeholder='변경할 프로필 사진을 골라주세요' id='donggyun' readonly class='upload-name form-control file-upload-info' />";
		photoBtn += "<span class='input-group-append'>";
		photoBtn += "<label for='uploadFile' id='lab'>파일찾기</label> ";
		photoBtn += "<input type='file' id='uploadFile' class='file-upload-browse btn btn-inverse-primary btn-fw' name='uploadFile'></button>";
		photoBtn += "</span><button type='button' class='btn btn-inverse-link btn-fw' id='photoDelete'>사진 삭제</button></div>";
		
		$("#mpTable").html(str);
		$("#mpBtn").html(btnStr);
		$("#photoBtn").append(photoBtn);
	}//정보수정 확인 비밀번호 일치 시 폼 변경 끝
	
	//프로필사진 삭제
	$("#photoDelete").on("click",function(){
		var userId = $("#userId").val();
		var photoDelCk = confirm("프로필 사진을 삭제하시겠습니까?");
		if(photoDelCk){
			$.ajax({
				url:"/member/photoDelete",
				type:"post",
				data:{"userId":userId},
				success:function(res){
					alert("사진 삭제 성공");
				}
			})
		}
	}) //프로필 삭제 끝
	
	//파일 선택시 이름 출력
	$("#uploadFile").on('change',function(){
		var fileName = $("#uploadFile").val();
		$(".upload-name").val(fileName);
		$("#mberProflPhoto").val(fileName);
	});
	
	
	//닉네임 중복확인
	$("#nickDupCk").on("click",function(){
		console.log("닉네임중복");
		const bfUserNcnm = $("#bfUserNcnm").val();
		const test = /^[A-Za-z가-힣\d]{2,8}$/;
		
		if(test.test(bfUserNcnm)){
			$.ajax({
				url:"/member/ncnmCk?userNcnm=" + bfUserNcnm,
				method:"get",
				dataType:"text",
//					beforeSend: function (xhr) {
//	                	xhr.setRequestHeader("${_csrf.headerName}", "${_csrf.token}");
//	                },
				success:function(res){
					if(res==0){
						Swal.fire({
				            title: '사용할 수 있는 닉네임입니다.',
				            text: "이 닉네임을 사용하시겠습니까?",
				            icon: 'success',
				            showCancelButton: true,
				            confirmButtonColor: '#3085d6',
				            cancelButtonColor: '#d33',
				            confirmButtonText: '사용',
				            cancelButtonText: '취소'
				        }).then((result) => {
				            if (result.isConfirmed) {
				                $("#bfUserNcnm").attr("readonly",true);
				                $("#nickDupCk").attr("disabled",true);
				                $("#nickDup").val("ok");
				                $("#userNcnm").val($("#bfUserNcnm").val());
				            }else{
				            	$("#bfUserNcnm").val("");
				            	$("#bfUserNcnm").focus();
				            }
				        })
					}else{
						Swal.fire({
				            title: '존재하는 닉네임입니다.',
				            text: "다른 닉네임을 입력하세요.",
				            icon: 'warning',
				            showCancelButton: false,
				            confirmButtonColor: '#3085d6',
				            confirmButtonText: '확인'
				        }).then((result) => {
				        	$("#bfUserNcnm").focus();
				        })
					}
				}
			})
		}else{
			Swal.fire({
	            title: '닉네임 형식이 올바르지 않습니다.',
	            text: "영문과 숫자,한글을 포함하여 2~8자로 입력해주세요.",
	            icon: 'error',
	            showCancelButton: false,
	            confirmButtonColor: '#3085d6',
	            confirmButtonText: '확인',
	        }).then((result) => {
	        	$("#usersNcnm").focus();
	        })
		}
	}) //닉네임 중복확인 끝
	
	//폰번호 인증
	$("#telCk").on("click",function(){
		console.log("전화번호 체크");
		var bfMberMbtlnum = $("#bfMberMbtlnum").val();
		const test = /^010[\d]{4}[\d]{4}$/;
		
		if(test.test(bfMberMbtlnum)){
			$.ajax({
                  type: "post",
                  url: "/member/check/sendSMS",
                  cache: false,
                  data: { "mberMbtlnum": bfMberMbtlnum },
//	                  beforeSend: function (xhr) {
//	                     xhr.setRequestHeader("${_csrf.headerName}", "${_csrf.token}");
//	                  },
                  success: function (data) {
					console.log("인증번호 : " + data);
	                  if (data == "error") {
	                  	Swal.fire({
		     			    title: '전화번호 형식이 올바르지 않습니다.',
		     			    text: "전화번호를 확인해주세요.",
		     			    icon: 'error',
		     			    showCancelButton: false,
		     			    confirmButtonColor: '#3085d6',
		     			    confirmButtonText: '확인',
	     			    }).then((result) => {
	     			    	$("#bfMberMbtlnum").focus();
	     			    })
	                  } else {
						Swal.fire({
							content: "input",
							title: "인증번호가 발송되었습니다.",
							text: "전송받은 인증번호 6자리를 입력해주세요.",
							input: 'text',
							buttons: ["확인", "취소"],
							dangerMode: true,
						})
						.then((ranNum) => {
							if(data == ranNum.value){ //인증번호 동일
								Swal.fire({
						            title: '본인인증이 완료되었습니다.',
						            icon: 'success',
						            showCancelButton: false,
						            confirmButtonColor: '#3085d6',
						            confirmButtonText: '확인',
						        }).then((result) => {
						        	$("#bfMberMbtlnum").attr("readonly",true);
					                $("#telCk").attr("disabled",true);
					                $("#telDup").val("ok");
					                $("#mberMbtlnum").val($("#bfMberMbtlnum").val());
					                
						        })
							}else{ //인증번호 틀리면
								Swal.fire("입력하신 번호가 전송된 인증번호와 일치하지 않습니다.");
							}
						});
							authNum = data;
	                  }
                  }
               });
		}else{
			Swal.fire({
	            title: '전화번호 형식이 올바르지 않습니다.',
	            text: "전화번호를 확인해주세요.",
	            icon: 'error',
	            showCancelButton: false,
	            confirmButtonColor: '#3085d6',
	            confirmButtonText: '확인',
	        }).then((result) => {
	        	$("#bfMberMbtlnum").focus();
	        })
		}
	}) //폰번호 인증 끝
	
	//업데이트 버튼 클릭 이벤트
	$("#updating").on("click",function(){
		console.log("수정진행");
		var bfUserNcnm = $("#bfUserNcnm").val();
		var bfUserPassword = $("#bfUserPassword").val();
		var bfUserPasswordCk = $("#bfUserPasswordCk").val();
		var bfMberMbtlnum = $("#bfMberMbtlnum").val();
		
		if(bfUserPassword == bfUserPasswordCk){
			$("#userPassword").val(bfUserPassword);
		}
		
		console.log($("#userPassword").val() + $("#userNcnm").val() + $("#mberMbtlnum").val());
		alert("잠만");
		$("#updateForm").submit();
		
	}) //업데이트 버튼클릭 이벤트 끝
	
	//취소버튼 클릭
	$("#updateCancel").on("click",function(){
		location.href="/member/memberMypage";
	})
})

$(function(){
	//회원정보수정
	$("#updateMember").on("click",function(){
		location.href="/member/memberUpdateCk";
	})
	//회원탈퇴
	$("#deleteMember").on("click",function(){
		var sessionId = $("#sessionId").val();
		Swal.fire({
			content: "input",
			title: "탈퇴는 되돌릴 수 없습니다.",
			text: "탈퇴하시려면  '회원탈퇴' 를 입력하고 확인을 눌러주세요.",
			input: 'text',
			buttons: ["확인", "취소"],
			dangerMode: true,
		})
		.then((deleteCk) => {
			console.log("탈퇴 확인 메세지 : ",deleteCk.value);
			if(deleteCk.value != "회원탈퇴"){
				alert("탈퇴확인 메세지가 일치하지 않습니다.\n다시 확인해주세요.");
			}else{
				$.ajax({
					url:"/member/memberDelete",
					type:"post",
					data:{"userId":sessionId},
					success:function(res){
						alert("회원탈퇴에 성공했습니다.\n누네띠네를 이용해주셔서 감사합니다.\n안녕히 가세요.");
						location.href="/main";
					}
				})
			}
		})
	})
})
</script>
<input type="hidden" id="sessionId" value="${memSession.userId}" />
<input type="hidden" id="nickDup" />
<input type="hidden" id="telDup" />

<div class="col-lg-6 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">회원 마이페이지</h4>
<!-- 			<p class="card-description"> -->
<!-- 				Add class -->
<%-- 				<code>.table-hover</code> --%>
<!-- 			</p> -->
			<form action="/member/updating" id="updateForm" method="post" enctype="multipart/form-data">
			<input type="hidden" id="userNcnm" name="userNcnm" />
			<input type="hidden" id="userPassword" name="userPassword" />
			<input type="hidden" id="mberMbtlnum" name="mberMbtlnum" />
			<input type="hidden" id="mberProflPhoto" name="mberProflPhoto" />
			<input type="hidden" id="userId" name="userId" value="${memSession.userId}" />
			<div class="table-responsive pt-3">
				<div class="box_container">
					<div class="box">
						<c:if test="${empty memSession.profile}">
							<img id="imgProfile" src="/images/2024/profile.jpg" style="float:left;" />
						</c:if>
						<c:if test="${not empty memSession.profile}">
							<img id="imgProfile" src="${memSession.profile}" style="float:left;" />
						</c:if>
					<div id="photoBtn"></div>
					</div>
				</div>
				<table class="table table-hover" id="mpTable">
					<tbody>
						<tr>
							<th>아이디</td>
							<td colspan="2">${memSession.userId}</td>
						</tr>
						<tr>
							<th>닉네임</td>
							<td colspan="2">${memSession.userNcnm}</td>
						</tr>
						<tr>
							<th>이메일</th>
							<td colspan="2">${memSession.email}</td>
						</tr>
						<tr>
							<th>이름</th>
							<td colspan="2">${memSession.userNm}</td>
						</tr>
						<tr>
							<th>전화번호</th>
							<td colspan="2">${memSession.mberMbtlnum}</td>
						</tr>
						<tr>
							<th>성별</th>
							<td colspan="2">${memSession.sexdstnTy}</td>
						</tr>
						<tr>
							<th>우편번호</th>
							<td colspan="2">${memSession.zip}</td>
						</tr>
						<tr>
							<th>주소</th>
							<td>${memSession.adres}</td>
							<td>${memSession.detailAdres}</td>
						</tr>
					</tbody>
				</table>
				<div id="mpBtn">
					<button type="button" class="btn btn-light btn-rounded btn-fw" id="updateMember">회원 정보 수정</button>
					<button type="button" class="btn btn-light btn-rounded btn-fw" id="deleteMember">회원 탈퇴</button>
				</div>
			</div>
			</form>
		</div>
	</div>
</div>