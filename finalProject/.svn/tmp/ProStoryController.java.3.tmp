			for(Cookie cookie : cookies) {
				
				if(cookie.getName().equals("vistiNo")) {
					
					orgCookie = cookie;
				}
			}
		}
		
		if(orgCookie != null) {
			
			if(!orgCookie.getValue().contains("[" + storyNo.toString()+ "]")) {
				
				count = this.proStoryService.getStoryCount(storyNo);
				
				orgCookie.setValue(orgCookie.getValue() + "["+ storyNo + "]");
