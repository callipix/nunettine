}
/* 글 내용의 경계선 표시 */
.content{
	border: 1px dotted #cecece;
}
/* 글 내용안에 있는 이미지의 크기 제한 */
.content img{
	max-width: 100%;
}
/* 댓글에 관련된 css */
.comments ul{
	padding: 0;
	margin: 0;
	list-style-type: none;
}
