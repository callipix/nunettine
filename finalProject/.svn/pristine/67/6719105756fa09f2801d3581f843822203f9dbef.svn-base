							.then((ranNum) => {
								if(data == ranNum.value){ //인증번호 동일
									Swal.fire({
							            title: '본인인증이 완료되었습니다.',
							            icon: 'success',
							            showCancelButton: false,
							            confirmButtonColor: '#3085d6',
							            confirmButtonText: '확인',
