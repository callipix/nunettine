package kr.or.ddit.pro.join.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.ResponseBody;

import kr.or.ddit.pro.join.service.ProJoinService;
import kr.or.ddit.vo.UsersVO;
import lombok.extern.slf4j.Slf4j;

@Controller
@Slf4j
@RequestMapping("/pro")
public class ProJoinController {
	
	@Autowired
	ProJoinService proJoinService;
	
	@GetMapping("/proLogin")
	public String proLogin() {
		return "pro/proLogin";
	}
	
	@ResponseBody
	@PostMapping("/proLogin")
	public int proLogin(String userId, String userPassword) {
		UsersVO usersVO = new UsersVO();
		usersVO.setUserId(userId);
		usersVO.setUserPassword(userPassword);
		log.info(userId + "/"+ userPassword);
		
		int result = this.proJoinService.proLogin(usersVO);
		
		return result;
	}
}
