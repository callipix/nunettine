<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.member.mypage.mapper.MemberMypageMapper">
	
	<!-- 회원탈퇴 -->
	<delete id="memberDelete" parameterType="String">
		DELETE FROM MBER
		WHERE USER_ID = #{userId}
	</delete>
	<delete id="memberDelete2" parameterType="String">
		DELETE FROM USERS
		WHERE USER_ID = #{userId}
	</delete>
	<delete id="memberDelete3" parameterType="String">
		DELETE FROM AUTHOR
		WHERE USER_ID = #{userId}
	</delete>
	<delete id="memberDelete4" parameterType="String">
		DELETE FROM ADRES
		WHERE USER_ID = #{userId}
	</delete>
	
	<!-- 전화번호 수정 -->
	<update id="updTel" parameterType="hashMap">
		UPDATE V_MBER_USERS
		SET MBER_MBTLNUM = #{mberMbtlnum}
		WHERE 1=1
		AND USER_ID = #{userId}
	</update>
	
	<!-- 비번수정 -->
	<update id="updPW" parameterType="hashMap">
		UPDATE V_MBER_USERS
		SET USER_PASSWORD = #{userPassword}
		WHERE 1=1
		AND USER_ID = #{userId}
	</update>
	
	<!-- 닉네임 수정 -->
	<update id="updNcnm" parameterType="hashMap">
		UPDATE V_MBER_USERS
		SET USER_NCNM = #{userNcnm}
		WHERE 1=1
		AND USER_ID = #{userId}
	</update>
	
	<!-- 사진 수정 -->
	<update id="updPhoto" parameterType="hashMap">
		UPDATE V_MBER_USERS
		SET MBER_PROFL_PHOTO = #{mberProflPhoto}
		WHERE 1=1
		AND USER_ID = #{userId}
	</update>
	
	<!-- 사진 삭제 -->
	<update id="photoDelete" parameterType="String">
		UPDATE V_MBER_USERS
		SET MBER_PROFL_PHOTO = null
		WHERE 1=1
		AND USER_ID = #{userId}
	</update>

</mapper>